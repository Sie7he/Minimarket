    <div class="row" style="opacity: 0.9;">
        {{#each productos}}
        
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3 col-xl-2 mt-4">
            <div class="card mx-auto" style="width: 14rem; border:hidden;">

                <div class="card-body">
                    <a href="/libros/detalle/{{idProductos}}">
                    
                    <img class="card-img-top" src="{{Imagen}}" witdh="200" height="250">
                   
                        
                    </a>
                </div>
              <div class="pie" height="100px">
                <div class="product-name">
                <strong class="product-item-name">
									{{Nombre}}
									</strong>
              
                  </div>
                  <span data-price-amount="{{PrecioUnitario}}" data-price-type="finalPrice" class="price-wrapper ">
                    <span class="price"> ${{PrecioUnitario}} </span>    
                  </span>
                 
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No se encontr√≥ ningun producto con este nombre.</p>
